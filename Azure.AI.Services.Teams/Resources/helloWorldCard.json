{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "${content}",
      "wrap": true,
      "size": "Large"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "${filepath}",
      "url": "${url}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}